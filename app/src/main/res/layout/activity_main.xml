<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hilay.calculator.MainActivity">

    <Button
        android:id="@+id/btnMultiply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/btnDivide"
        android:layout_margin="1dp"
        android:layout_marginRight="6dp"
        android:width="100dp"
        android:height="100dp"
        android:background="?android:attr/colorActivatedHighlight"
        android:text="X"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btnOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnTwo"
        android:layout_alignBottom="@+id/btnTwo"
        android:layout_margin="1dp"
        android:layout_toLeftOf="@+id/btnFive"
        android:layout_toStartOf="@+id/btnFive"
        android:width="100dp"
        android:height="100dp"
        android:background="?android:attr/colorControlHighlight"
        android:text="1"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btnFour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnOne"
        android:layout_alignLeft="@+id/btnOne"
        android:layout_alignStart="@+id/btnOne"
        android:layout_margin="1dp"
        android:width="100dp"
        android:height="100dp"
        android:background="?android:attr/colorControlHighlight"
        android:text="4"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btnZero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnOne"
        android:width="200dp"
        android:height="100dp"
        android:background="?android:attr/colorControlHighlight"
        android:text="0"
        android:textSize="30sp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:layout_alignLeft="@+id/btnClear"
        android:layout_alignStart="@+id/btnClear"
        android:layout_toLeftOf="@+id/btnSix"
        android:layout_toStartOf="@+id/btnSix" />

    <Button
        android:id="@+id/btnTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnThree"
        android:layout_alignBottom="@+id/btnThree"
        android:layout_margin="1dp"
        android:layout_toEndOf="@+id/btnOne"
        android:layout_toRightOf="@+id/btnOne"
        android:width="100dp"
        android:height="100dp"
        android:background="?android:attr/colorControlHighlight"
        android:text="2"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btnPoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="100dp"
        android:height="100dp"
        android:background="?android:attr/colorControlHighlight"
        android:text="."
        android:textSize="30sp"
        android:layout_alignBaseline="@+id/btnZero"
        android:layout_alignBottom="@+id/btnZero"
        android:layout_alignLeft="@+id/btnThree"
        android:layout_alignStart="@+id/btnThree" />

    <Button
        android:id="@+id/btnThree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="100dp"
        android:height="100dp"
        android:background="?android:attr/colorControlHighlight"
        android:text="3"
        android:textSize="30sp"
        android:layout_alignBaseline="@+id/btnPlus"
        android:layout_alignBottom="@+id/btnPlus"
        android:layout_alignLeft="@+id/btnSix"
        android:layout_alignStart="@+id/btnSix" />

    <Button
        android:id="@+id/btnEquals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnPlus"
        android:layout_alignParentRight="true"
        android:layout_alignStart="@+id/btnPlus"
        android:layout_below="@+id/btnOne"
        android:layout_margin="1dp"
        android:layout_marginRight="6dp"
        android:width="100dp"
        android:height="100dp"
        android:background="?android:attr/colorActivatedHighlight"
        android:text="="
        android:textSize="30sp" />

    <Button
        android:id="@+id/btnPlus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/btnSix"
        android:layout_margin="1dp"
        android:layout_marginRight="6dp"
        android:width="100dp"
        android:height="100dp"
        android:background="?android:attr/colorActivatedHighlight"
        android:text="+"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btnFive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnFour"
        android:layout_alignBottom="@+id/btnFour"
        android:layout_alignLeft="@+id/btnEight"
        android:layout_alignStart="@+id/btnEight"
        android:layout_margin="1dp"
        android:width="100dp"
        android:height="100dp"
        android:background="?attr/colorControlHighlight"
        android:text="5"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btnSix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnMinus"
        android:layout_alignBottom="@+id/btnMinus"
        android:layout_margin="1dp"
        android:layout_toLeftOf="@+id/btnMinus"
        android:layout_toStartOf="@+id/btnMinus"
        android:width="100dp"
        android:height="100dp"
        android:background="?attr/colorControlHighlight"
        android:text="6"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btnSeven"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnEight"
        android:layout_alignBottom="@+id/btnEight"
        android:layout_alignLeft="@+id/btnClear"
        android:layout_alignStart="@+id/btnClear"
        android:layout_margin="1dp"
        android:width="100dp"
        android:height="100dp"
        android:background="?attr/colorControlHighlight"
        android:text="7"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btnDivide"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tvResult"
        android:layout_margin="1dp"
        android:layout_marginEnd="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="6dp"
        android:width="100dp"
        android:height="100dp"
        android:background="?android:attr/colorActivatedHighlight"
        android:text="/"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btnNine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnDivide"
        android:layout_margin="1dp"
        android:layout_toEndOf="@+id/btnPlusMinus"
        android:layout_toRightOf="@+id/btnMultiply"
        android:width="100dp"
        android:height="100dp"
        android:background="?attr/colorControlHighlight"
        android:text="9"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btnPlusMinus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnPercent"
        android:layout_alignBottom="@+id/btnPercent"
        android:layout_margin="1dp"
        android:layout_toLeftOf="@+id/btnPercent"
        android:layout_toStartOf="@+id/btnPercent"
        android:width="100dp"
        android:height="100dp"
        android:background="?attr/colorButtonNormal"
        android:text="+/-"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btnClear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnPlusMinus"
        android:layout_alignBottom="@+id/btnPlusMinus"
        android:layout_margin="1dp"
        android:layout_toLeftOf="@+id/btnPlusMinus"
        android:layout_toStartOf="@+id/btnPlusMinus"
        android:width="100dp"
        android:height="100dp"
        android:background="?android:attr/colorButtonNormal"
        android:text="C"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btnEight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnNine"
        android:layout_alignBottom="@+id/btnNine"
        android:layout_margin="1dp"
        android:layout_toLeftOf="@+id/btnNine"
        android:layout_toStartOf="@+id/btnNine"
        android:width="100dp"
        android:height="100dp"
        android:background="?attr/colorControlHighlight"
        android:text="8"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btnMinus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/btnMultiply"
        android:layout_margin="1dp"
        android:layout_marginRight="6dp"
        android:layout_toEndOf="@+id/btnNine"
        android:layout_toRightOf="@+id/btnNine"
        android:width="100dp"
        android:height="100dp"
        android:background="?android:attr/colorActivatedHighlight"
        android:text="-"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:width="390dp"
        android:text="0"
        android:textAlignment="textStart"
        android:textSize="36sp" />

    <Button
        android:id="@+id/btnPercent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnMultiply"
        android:layout_margin="1dp"
        android:layout_toLeftOf="@+id/btnDivide"
        android:width="100dp"
        android:height="100dp"
        android:background="?attr/colorButtonNormal"
        android:text="%"
        android:textSize="30sp" />

</RelativeLayout>